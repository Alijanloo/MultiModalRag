# MultiModal RAG Configuration File
# This file contains configuration settings for the MultiModal RAG application

elasticsearch:
  hosts:
  - http://localhost:9200
  username: null
  password: null
  verify_certs: true
  use_ssl: false
  ca_certs: null
  index_name: multimodal_index
  vector_dimensions: 1536
  shards: 1
  replicas: 0
  default_search_size: 10
  max_search_size: 100

google_genai:
  api_key: "your_google_genai_api_key_here"
  default_llm_model: "gemini-2.5-flash"
  embedding_model: "gemini-embedding-001"
  embedding_dimensions: 768

logging:
  level: INFO
  use_colors: true
  console_output: true
  file_output: true
  format_type: detailed
